name: 返利网2

on:
  workflow_dispatch:
  schedule:
     - cron: '0 2,15 * * *'
  watch:
    types: started
jobs:
  build:
    runs-on: ubuntu-latest
    if: github.event.repository.owner.id == github.event.sender.id

    env:
        flwURL: ${{ secrets.FL_flwURL }}
        flwHEADER: ${{ secrets.FL_flwHEADER }}		
        flwspBODY: ${{ secrets.FL_flwspBODY }}	
        flwqWBODY: ${{ secrets.FL_flwqwBODY}} 
        flwydBODY: ${{ secrets.FL_flwydBODY}}               
        CASH: ${{ secrets.FL_CASH }}
        DHCASH: ${{ secrets.FL_DHCASH }}
    steps:
      - name: Checkout
        run: |
          git clone https://github.com/QingAnLe/YiYu.git ~/js
      - name: Use Node.js 12.x
        uses: actions/setup-node@v1
        with:
          node-version: 12.x
      - name: npm install
        if: env. FL_flwURL
        run: |
          cd ~/js
          git checkout ZiYe
          npm install
      - name: '运行 【返利网】'
        if: env. FL_flwURL
        run: |
          cd ~/js
          node Task/flw.js
        env:
          PUSH_KEY: ${{ secrets.PUSH_KEY }}
          BARK_PUSH: ${{ secrets.BARK_PUSH }}
          TG_BOT_TOKEN: ${{ secrets.TG_BOT_TOKEN }}
          TG_USER_ID: ${{ secrets.TG_USER_ID }}
          BARK_SOUND: ${{ secrets.BARK_SOUND }}
          DD_BOT_TOKEN: ${{ secrets.DD_BOT_TOKEN }}
          DD_BOT_SECRET: ${{ secrets.DD_BOT_SECRET }}
